---
import Heading from "./Heading.astro";
import Button from "./Button.astro";

const navItems = [
  { href: "/om-os", label: "OM OS" },
  { href: "/det-vi-goer", label: "DET VI GØR" },
  { href: "/kontakt", label: "KONTAKT" },
];
---

<header
  x-data="{ showmenu: false }"
  class="sticky top-0 z-50 w-full bg-secondary"
>
  <!-- Desktop og mobil header -->
  <div class="w-full px-4 py-6 md:px-10 md:py-6">
    <div class="grid grid-cols-6 md:grid-cols-12 items-center gap-3">
      <!-- Logo -->
      <div class="col-span-3 md:col-span-2 flex items-center">
        <a href="/" class="block">
          <img src="/img/logo.svg" alt="Projekt Udenfor" class="w-10 md:w-10" />
        </a>
      </div>

      <!-- Desktop navigation -->
      <nav class="hidden md:flex md:col-span-8 justify-end gap-24">
        {
          navItems.map((item) => (
            <a
              href={item.href}
              class="text-primary transition duration-200 hover:underline hover:decoration-3 hover:underline-offset-5"
            >
              <Heading style="cta">{item.label}</Heading>
            </a>
          ))
        }
      </nav>

      <!-- Støt button -->
      <div class="col-span-3 flex items-center justify-end gap-4 md:col-span-2">
        <a href="/stoet" aria-label="Støt os">
          <Button variant="btnmenu">STØT</Button>
        </a>

        <!-- Burgermenu button -->
        <button
          class="md:hidden p-1 text-primary"
          x-on:click="showmenu = !showmenu"
          aria-label="Åbn menu"
        >
          <svg
            class="w-10 h-10"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path stroke-width="2" d="M3 6h18M3 12h18M3 18h18"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Dropdown menu -->
  <nav
    id="mobilmenu"
    x-cloak
    x-show="showmenu"
    x-transition:enter="transition transform duration-300"
    x-transition:enter-start="-translate-y-full"
    x-transition:enter-end="translate-y-0"
    x-transition:leave="transition transform duration-200"
    x-transition:leave-start="translate-y-0"
    x-transition:leave-end="-translate-y-full"
    class="fixed left-0 right-0 top-0 h-[434px] bg-secondary flex flex-col justify-between z-40 transform md:hidden"
  >
    <!-- Menu med kryds som luk -->
    <div class="flex justify-between items-center px-4 py-6">
      <button
        class="ml-auto text-primary"
        x-on:click="showmenu = false"
        aria-label="Luk menu"
      >
        <svg
          class="w-11 h-11"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="butt"
            stroke-linejoin="miter"
            stroke-width="2"
            d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <!-- Menu links -->
    <ul
      class="flex flex-col items-center text-center gap-6 uppercase"
      x-transition:enter="transition ease-out duration-300 delay-150"
      x-transition:enter-start="opacity-0 translate-y-4"
      x-transition:enter-end="opacity-100 translate-y-0"
    >
      <li>
        <a
          href="/det-vi-goer"
          class="transition-colors duration-200 text-primary hover:text-accent"
          x-on:click="showmenu = false"
        >
          <Heading style="h3">DET VI GØR</Heading>
        </a>
      </li>
      <li>
        <a
          href="/kontakt"
          class="transition-colors duration-200 text-primary hover:text-accent"
          x-on:click="showmenu = false"
        >
          <Heading style="h3">KONTAKT OS</Heading>
        </a>
      </li>
      <li>
        <a
          href="/om-os"
          class="transition-colors duration-200 text-primary hover:text-accent"
          x-on:click="showmenu = false"
        >
          <Heading style="h3">OM OS</Heading>
        </a>
      </li>
    </ul>

    <!-- Støt button i mobil menu -->
    <div class="pb-12 flex justify-center">
      <a href="/stoet" aria-label="Støt os" x-on:click="showmenu = false">
        <Button variant="btnmenu">STØT</Button>
      </a>
    </div>
  </nav>
</header>
