---
import Heading from "./Heading.astro";
// Henter parametrene fra Astro.props
const { variant = "onsand" } = Astro.props;

//Definer den styling (Tailwind classes, der gør sig gældende for alle knapper)
const buttonStyling = "inline-flex justify-center items-center ";

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige varianter
const variantClasses = {
  onsand:
    "px-7 py-2 md:px-16 md:py-3 bg-accent text-secondary shadow-[var(--shadow-offset-md)_var(--color-secondary)] hover:bg-secondary hover:text-accent hover:shadow-[var(--shadow-offset-md)_var(--color-accent)]",
  onred:
    "px-7 py-2 md:px-16 md:py-3 bg-accent text-secondary shadow-[var(--shadow-offset-md)_var(--color-primary)] hover:bg-primary hover:text-secondary hover:shadow-[var(--shadow-offset-md)_var(--color-accent)]",
  onblue:
    "px-7 py-2 md:px-16 md:py-3 bg-primary text-secondary shadow-[var(--shadow-offset-md)_var(--color-secondary)] hover:bg-secondary hover:text-primary hover:shadow-[var(--shadow-offset-md)_var(--color-primary)]",
  btnmenu:
    "w-28 h-8 md:w-36 md:h-12 px-7 py-2 md:px-9 md:py-2.5 bg-accent text-secondary shadow-[var(--shadow-offset-md)_var(--color-primary)] hover:bg-primary hover:text-secondary hover:shadow-[var(--shadow-offset-md)_var(--color-accent)]",
};
---

<!--Sæt classes for den pågældende knap sammen ved hjælp af Astros class:list -->
<button class:list={[buttonStyling, variantClasses[variant]]}
  ><Heading style="cta"><slot /></Heading></button
>
