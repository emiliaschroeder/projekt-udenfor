---
// Astro.props: kun style
const { style = "h2", stylingclasses = "" } = Astro.props;

// style bestemmer både HTML-tag og Tailwind-classes
const sizeClasses = {
  h1: "text-[100px] md:text-[210px] font-display uppercase",
  h2: "text-[64px] md:text-[150px] font-display uppercase",
  h3: "text-[30px] md:text-[64px] font-sans",
  h4: "text-[25px] md:text-[48px] font-sans",
  cta: "text-[22px] md:text-[30px] font-sans uppercase",
};

const Htmlheading = style; // HTML-tag følger style
---

<Htmlheading class:list={[sizeClasses[style], stylingclasses]}>
  <slot />
</Htmlheading>
