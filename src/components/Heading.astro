---
// Astro.props: kun style
const { style = "h2", stylingclasses = "" } = Astro.props;

// style bestemmer b√•de HTML-tag og Tailwind-classes
const sizeClasses = {
  h1: "text-[100px] md:text-[210px] font-display uppercase underline",
  h2: "text-[64px] md:text-[150px] font-display uppercase",
  h3: "text-[30px] md:text-[64px] font-sans-bold",
  h4: "text-[25px] md:text-[48px] font-sans-bold",
  cta: "text-[22px] md:text-[30px] font-sans-bold uppercase relative top-[2px] md:top-[3.5px]",
};

const Htmlheading = style;
---

<Htmlheading class:list={[sizeClasses[style], stylingclasses]}>
  <slot />
</Htmlheading>
