---
import MainLayout from "../layouts/MainLayout.astro";
import Link from "../components/Link.astro";
import { Image } from "astro:assets";
import thumbsup from "../assets/images/thumbsup.png";
import Heading from "../components/Heading.astro";
import Text from "../components/Text.astro";
import Button from "../components/Button.astro";
import HistorieCard from "../components/HistorieCard.astro";
---

<MainLayout title="Titel">
  <main class="grid grid-cols-6 md:grid-cols-12">
    <Heading htmlheading="h1">Lav noget flot!</Heading>
    <Text teksttype="brødtekst">Så bliver Anders glad:-)</Text>

    <!-- Start ScrollBar -->
    <section class="relative col-span-full md:col-span-full">
      <div
        class="flex overflow-x-auto pl-7 md:pl-30 gap-10 md:gap-[var(--space-desk-xl)] pb-10 md:pb-15 no-scrollbar"
      >
        <HistorieCard img="/img/kristian.png" title="Kristian" />
        <HistorieCard img="/img/steen.png" title="Steen" />
        <HistorieCard img="/img/julie.png" title="Julie" />
        <HistorieCard img="/img/oliver.png" title="Oliver" />
        <HistorieCard img="/img/tristan.png" title="Tristan" />
        <HistorieCard img="/img/sandy.png" title="Sandy" />
      </div>
    </section>
    <!-- Slut ScrollBar -->
  </main>
</MainLayout>
